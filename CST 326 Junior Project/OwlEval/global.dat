function key_to_CRN()
{
  $key=$_POST['key'];
  $crn=0;

  $result=mysql_query("select CRN, valid_begin, valid_end, create_time from student_keys where e_key='$key'");
  if ($result)
  {
    $row=mysql_fetch_array($result);
    if($row)
    {
      $crn=$row;
    }
  }
  return $crn;
}

