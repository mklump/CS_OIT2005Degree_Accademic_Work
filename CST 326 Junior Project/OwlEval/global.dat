function check_password($user_level)
{
  
  $user_t=$user_level;
  $fac_name=$_POST['fac_name'];
  if($fac_name)
  {
    $u_result=mysql_query("select count(*) from users where user_name='" . $fac_name . "' and user_name=password");
    $u_row=mysql_fetch_array($u_result);
    if ($u_row[0] >= 1)
    {
      $user_t="change_pword";
